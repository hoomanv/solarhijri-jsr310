        <artifactId>oss-parent</artifactId>
        <version>9</version>
    </parent>

    <properties>
        <netbeans.hint.license>apache20</netbeans.hint.license>
    </properties>

    <name>solarhijri-jsr310</name>
    <description>A JSR-310 implementation of the Solar Hijri calendar system</description>
    <url>https://github.com/rayanova-com/solarhijri-jsr310</url>
 
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
