    <organization>
        <name>RAYANOVA.COM</name>
    </organization>

    <developers>
        <developer>
            <id>hoomanv</id>
            <name>Hooman Valibeigi</name>
            <email>hooman.valibeigi@rayanova.com</email>
        </developer>
    </developers>

    <scm>
        <url>https://github.com/rayanova-com/solarhijri-jsr310</url>
        <connection>scm:git:git@github.com:rayanova-com/solarhijri-jsr310.git</connection>
        <developerConnection>scm:git:git@github.com:rayanova-com/solarhijri-jsr310.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/rayanova-com/solarhijri-jsr310/issues</url>
    </issueManagement>

    <dependencies>
        <dependency>
            <groupId>com.ibm.icu</groupId>
            <artifactId>icu4j</artifactId>
